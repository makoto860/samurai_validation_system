<h1>Rooms#new</h1>
<p>Find me in app/views/rooms/new.html.erb</p>
<%= render "layouts/errors", obj: @room %>
<h1>部屋新規作成</h1>
<%= form_with model: @room do |f| %>
<table>
  <tr>
    <th><%= f.label :name ,"名前" %></th>
    <td><%= f.text_field :name %></td>
  </tr>

  <tr>
    <th><%= f.label :amount, "金額" %></th>
    <td><%= f.number_field :amount %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "部屋を登録する"%></li>
    <li><%= link_to "部屋情報一覧に戻る", :rooms %></li>
  </ul>
</div>
<% end %>